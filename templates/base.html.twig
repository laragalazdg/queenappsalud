            {#{{ encore_entry_link_tags('app') }}#}
             <link href={{asset('css/theme.css')}} rel="stylesheet" />
           <img src={{asset('img/portada.jpg')}}/>
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
